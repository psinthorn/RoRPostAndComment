<!DOCTYPE html>
<html>
  <head>
    <title>Footballcontrol</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

     <%#<%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%#<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

     
    
  </head>

  <body>
  <nav class="navbar navbar-default"> 
    <div class="container">
      <div class="navbar-header">
        <%= link_to "FootballControl", root_path, class: "navbar-brand" %>
      </div>

      <ul class="navbar-nav nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      </ul>
       <% if user_signed_in? %>
        <p><%= link_to "New Post", new_message_path, class: "navbar-text navbar-link" %></p>
       <% end %>
    </nav>
    <div class="container">
      <p class="notice success"><%= notice %></p>
      <p class="alert danger"><%= alert %></p>
    </div>
  </div>

      <div class="container">
        <%= yield %>
      </div>
      
  </body>
</html>
