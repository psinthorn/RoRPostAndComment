<div class="col-md-8 col-md-offset-2">
  <div class="massage">
    <h1 class="message-show">
      <%= @message.title %>
    </h1>
    <p class="message-posted-by">
     <%= time_ago_in_words(@message.created_at) %> ago
    </p>
    <div class="message-desc">
      <%= @message.desc %>
    </div>

    <h3 class="comment-section-header">
        <%= render @message.comments %>
    </h3>
<% if !user_signed_in? %>
 <div class="links btn-group">
   <%= link_to "Join Discussion? Sign In", user_session_path, class: "btn btn-default" %>
</div>
<% end %>
     <h3 class="reply-to-msg">
        <%= render "comments/form" %>
     </h3>
    <br />

 
    <% if user_signed_in? %>
     <% if @message.user_id == current_user.id %>
            <div class="links btn-group">
                <%= link_to "Back", root_path, class: "btn btn-default" %>
                <%= link_to "Edit", edit_message_path(@message), class: "btn btn-warning"
                %>
                <%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"
                %>
            </div>
        <% end %>
    <% end %>  
  </div>
</div>
